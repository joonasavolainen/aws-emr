<% if @metastore_server_uris[0] -%>
  <property>
    <name>hive.metastore.uris</name>
    <value><%= @metastore_server_uris.join(",") %></value>
    <description>JDBC connect string for a JDBC metastore</description>
  </property>
<% end -%>

<% if @metastore_database_url -%>
  <property>
    <name>javax.jdo.option.ConnectionURL</name>
    <value><%= @metastore_database_url %></value>
    <description>username to use against metastore database</description>
  </property>
<% end -%>

<% if @metastore_database_driver_class -%>
  <property>
    <name>javax.jdo.option.ConnectionDriverName</name>
    <value><%= @metastore_database_driver_class %></value>
    <description>username to use against metastore database</description>
  </property>
<% end -%>

<% if @metastore_database_user -%>
  <property>
    <name>javax.jdo.option.ConnectionUserName</name>
    <value><%= @metastore_database_user %></value>
    <description>username to use against metastore database</description>
  </property>
<% end -%>

<% if @metastore_database_password -%>
  <property>
    <name>javax.jdo.option.ConnectionPassword</name>
    <value><%= @metastore_database_password %></value>
    <description>password to use against metastore database</description>
  </property>
<% end -%>
